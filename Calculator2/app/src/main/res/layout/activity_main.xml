<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kkkkk"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif-monospace"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#4C7A80"
        android:textSize="48sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif-monospace"
        android:gravity="center_horizontal"
        android:text="Enter Numbers"
        android:textAlignment="center"
        android:textColor="#590E0E"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="367dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shape1"
        android:ems="10"
        android:hint="First Number"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName1"
        android:layout_width="367dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape1"
        android:ems="10"
        android:hint="Second Number"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="123dp"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="48sp"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#370505"
            android:textSize="80sp"
            android:textStyle="bold"
            app:iconTint="#76A547"
            android:background="@drawable/shape2"
            app:strokeColor="#5E9859" />

        <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="123dp"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape2"
            android:lineSpacingExtra="48sp"
            android:text="Ã—"
            android:textAlignment="center"
            android:textColor="#370505"
            android:textSize="80sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="123dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-267dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape2"
            android:lineSpacingExtra="48sp"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#370505"
            android:textSize="80sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="123dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape2"
            android:lineSpacingExtra="48sp"
            android:text="/"
            android:textAlignment="center"
            android:textColor="#370505"
            android:textSize="80sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape3"
            android:fontFamily="serif-monospace"
            android:text="Clear"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:text="Total"
            android:textAlignment="center"
            android:textColor="#590E0E"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>